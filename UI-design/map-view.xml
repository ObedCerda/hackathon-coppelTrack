<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoFundacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fundacion_coppel"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugares cerca de ti"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Imagen estática del mapa con círculo -->
        <ImageView
            android:id="@+id/staticMapImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/img_mapa_estatico"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp" />

        <!-- Lista de lugares sugeridos -->
        <TextView
            android:text="Tortillería Gutierrez"
            android:background="#66B3FF"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Tortillería La Favorita"
            android:background="#66B3FF"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Fonda La Tapatía de Santa Tere"
            android:background="#66B3FF"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
