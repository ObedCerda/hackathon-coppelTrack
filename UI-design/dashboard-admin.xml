<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fundacion_coppel"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:text="Tus colaboradores"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Buscador -->
        <EditText
            android:id="@+id/inputBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar ID o Nombre..."
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp"/>

        <!-- Lista de colaboradores (simulada con TextViews) -->
        <TextView
            android:text="234556     Luis Abraham"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="153456     Obed Josué"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="581250     Néstor Salvador"
            android:background="#66B3FF"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="925482     Juan Carlos"
            android:background="#E0E0E0"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Resumen del colaborador -->
        <TextView
            android:text="Resumen de tu colaborador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView android:text="Total de clientes registrados:" />
        <TextView
            android:text="158"
            android:textSize="20sp"
            android:textColor="#1E88E5"
            android:layout_marginBottom="8dp" />

        <TextView android:text="Clientes con sesión iniciada:" />
        <TextView
            android:text="34"
            android:textSize="20sp"
            android:textColor="#1E88E5"
            android:layout_marginBottom="8dp" />

        <TextView android:text="Registros de esta semana:" />
        <TextView
            android:text="12"
            android:textSize="20sp"
            android:textColor="#1E88E5"
            android:layout_marginBottom="8dp" />

        <TextView android:text="Lecciones completadas por clientes:" />
        <TextView
            android:text="67"
            android:textSize="20sp"
            android:textColor="#1E88E5"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
