<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar nuevo cliente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Campo Nombre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Completo"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miguel Espinoza Ramírez"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Campo Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Teléfono"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4612302603"
            android:inputType="phone"
            android:layout_marginBottom="16dp" />

        <!-- Campo CURP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURP"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputCurp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MATZ000131HGTRRNA3"
            android:inputType="text"
            android:layout_marginBottom="24dp" />

        <!-- Botón Registrar -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:backgroundTint="#4285F4"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>
